<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/etDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:gravity="center_vertical"
        android:hint="@string/_0"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:alignmentMode="alignBounds"
        android:columnCount="5"
        android:orientation="vertical"
        android:padding="0dp"
        android:rowCount="5"
        android:useDefaultMargins="false">


        <Button
            android:id="@+id/buttonX2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:onClick="buttonClear"
            android:text="@string/xSq"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:onClick="buttonClear"
            android:text="@string/c"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonParentheses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:onClick="buttonClicked"
            android:text="@string/parentheses"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:onClick="buttonClicked"
            android:text="@string/percent"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:onClick="clickSing"
            android:text="@string/Division"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="0dp"
            android:layout_row="1"
            android:layout_rowSpan="3"
            android:gravity="fill_vertical"
            android:onClick="buttonClear"
            android:text="@string/m"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button7"
            android:layout_column="1"
            android:layout_margin="0dp"
            android:layout_row="1"
            android:onClick="buttonClicked"
            android:text="@string/_7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:layout_row="1"
            android:onClick="buttonClicked"
            android:text="@string/_8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:layout_row="1"
            android:onClick="buttonClicked"
            android:text="@string/_9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_margin="0dp"
            android:layout_row="1"
            android:onClick="clickSing"
            android:text="@string/x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="0dp"
            android:layout_row="2"
            android:onClick="buttonClicked"
            android:text="@string/_4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:layout_row="2"
            android:onClick="buttonClicked"
            android:text="@string/_5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button6"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:layout_row="2"
            android:onClick="buttonClicked"
            android:text="@string/_6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_column="4"
            android:layout_margin="0dp"
            android:layout_row="2"
            android:onClick="clickSing"
            android:text="@string/Minus"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button1"
            android:layout_column="1"
            android:layout_margin="0dp"
            android:layout_row="3"
            android:onClick="buttonClicked"
            android:text="@string/_1"
            android:textSize="30sp" />


        <Button
            android:id="@+id/button2"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:layout_row="3"
            android:onClick="buttonClicked"
            android:text="@string/_2"
            android:textSize="30sp" />


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:layout_row="3"
            android:onClick="buttonClicked"
            android:text="@string/_3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_margin="0dp"
            android:layout_row="3"
            android:onClick="clickSing"
            android:text="@string/Plus"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="0dp"
            android:layout_row="4"
            android:onClick="buttonClicked"
            android:text="@string/Dot"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:layout_row="4"
            android:onClick="buttonClicked"
            android:text="@string/_0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="0dp"
            android:layout_row="4"
            android:onClick="buttonClicked"
            android:text="@string/PlusMinus"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_margin="0dp"
            android:layout_row="4"
            android:onClick="equals"
            android:text="@string/Equal"
            android:textSize="30sp" />
    </GridLayout>

</LinearLayout>